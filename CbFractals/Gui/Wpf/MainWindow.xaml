                                                    <TextBlock Text="{Binding VmName}"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </GroupBox>
                                    <GroupBox Header="{Binding VmName}" DataContext="{Binding VmProgression}">
                                        <psysgui:CValueNodeGui>
                                        </psysgui:CValueNodeGui>
                                    </GroupBox>
                                </StackPanel>
                            </GroupBox>-->
                        </StackPanel>
                    </DockPanel>


                </Grid>
            </Grid>
        </DockPanel>
    

    </Grid>
</Window>
