                                                </MenuItem>
                                                <MenuItem Header="Show all" IsCheckable="True" IsChecked="{Binding VmShowAll, Mode=TwoWay}"/>
                                            </MenuItem>
                                        </Menu>
                                        <TextBlock Text="Parameters"/>
                                    </StackPanel>
                                </GroupBox.Header>
                                <ListView ItemsSource="{Binding VmValueSources}" SelectedItem="{Binding VmValueSource}">
